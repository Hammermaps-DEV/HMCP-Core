{
    "name": "amphp/artax",
    "homepage": "https://github.com/amphp/artax",
    "description": "Asynchronous parallel HTTP/1.1 client built on the Amp concurrency framework",
    "keywords": [
        "http",
        "rest",
        "client",
        "parallel",
        "async",
        "non-blocking"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@gmail.com",
            "role": "Creator / Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "amphp/amp": "^1",
        "amphp/socket": "^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "friendsofphp/php-cs-fixer": "~1.9"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amp\\Artax\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Test\\Artax\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-1.x": "1.x-dev"
        }
    }
}
